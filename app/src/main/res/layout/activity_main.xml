<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1.0">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="0"
			android:gravity="left|center"
			android:padding="5dp"
			android:id="@+id/full"
			android:paddingLeft="10dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="0"
			android:gravity="right|center"
			android:padding="5dp"
			android:id="@+id/res"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Text"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1.0">

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="7"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="8"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="9"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1.0">

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="4"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="5"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="6"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1.0">

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="1"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="2"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="3"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_weight="1.0">

		<Button
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:text="0"
			android:layout_weight="1.0"
			android:onClick="onClickDigit"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_weight="1.0"
		android:padding="25dp">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="+"
				android:onClick="onClickOperator"
				android:layout_weight="1.0"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="-"
				android:onClick="onClickOperator"
				android:layout_weight="1.0"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="*"
				android:onClick="onClickOperator"
				android:layout_weight="1.0"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="/"
				android:onClick="onClickOperator"
				android:layout_weight="1.0"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="="
				android:onClick="onClickOperator"
				android:layout_weight="1.0"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

			<Button
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:text="Â¢"
				android:onClick="onClickOperator"
				android:layout_weight="1.0"
				android:textAppearance="?android:attr/textAppearanceLarge"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

